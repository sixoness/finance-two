extend layout

block content
	.gy_box
		include lib/header
		#gy_step
			.gy_step_main.px1000.clearfix
				.gy_step_main_p.fl
					p.gy_step_proe1 1
					p(style='color:#29A7E1;padding-top:10px;') 填写用户信息
				.list_press_wper.fl
					.list_press
				.gy_step_main_p.fl
					p.gy_step_proe2 2
					p(style='padding-top:10px;') 手机信息验证
				.list_press_wper.fl
					.list_press
				.gy_step_main_p.fl
					p.gy_step_proe3 3
					p(style='padding-top:10px;') 注册成功
