								a(href='')
									span(style='color:#29A7E1;') 《服务条款》
							p
								a(href='')
									img(src='/public/images/home/login_btn.png')
				#login2.left_form.fl(style='display:none;')
					form
						.form_lb
							lable 机构用户名:
							input.form-control(type='text', value='请输入机构用户名', onfocus="this.value = '';", onblur="if (this.value == '') {this.value = '请输入机构用户名';}")
						.form_lb
							lable 机构类型:
							select#select_k1.xla_k(name='select')
